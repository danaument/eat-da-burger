<div class="jumbotron jumbotron-fluid">
  <div class="container">
    <h1 class="display-4">Welcome to Eat Da Burger!</h1>
    <p class="lead">A silly app to demonstrate CRUD</p>
  </div>
</div>
<div class="container mb-4">
  <div class="row">
    <div class="col">
      <h2>Burgers ready to be devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">
      <h2>Burgers that done got et!</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>
<div class="container text-center">
  <div class="row">
    <div class="col">
      <h2>Add a Burger to the Menu</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>

        <button type="submit" class="btn btn-primary mb-2">Add Burger</button>
      </form>
    </div>
  </div>
</div>